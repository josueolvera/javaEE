<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>weba</display-name>
    <servlet>
        <servlet-name>Servilleta</servlet-name>
        <servlet-class>com.unitec.weba.ServletAutenticar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAntro</servlet-name>
        <servlet-class>com.unitec.weba.ServletAntro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGuardarUsuario</servlet-name>
        <servlet-class>com.unitec.weba.ServletGuardarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlethola</servlet-name>
        <servlet-class>com.unitec.weba.Servlethola</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGuardar</servlet-name>
        <servlet-class>com.unitec.weba.ServletGuardar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBuscarTodosUsuarios</servlet-name>
        <servlet-class>com.unitec.weba.ServletBuscarTodosUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servilleta</servlet-name>
        <url-pattern>/autenticar.php</url-pattern>
        <url-pattern>/ingresar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAntro</servlet-name>
        <url-pattern>/bebida.php</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGuardarUsuario</servlet-name>
        <url-pattern>/guardar-usuario.php</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlethola</servlet-name>
        <url-pattern>/hola</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGuardar</servlet-name>
        <url-pattern>/prueba</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBuscarTodosUsuarios</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
